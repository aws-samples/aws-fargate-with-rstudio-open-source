{
    "agent": {
        "metrics_collection_interval": 60,
        "debug": false,
        "run_as_user": "root"
    },
    "logs": {
        "force_flush_interval": 5,
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "##log_file_path##/*.log",
                        "log_group_name": "/##res_name##/##instance##/service_log",
                        "log_stream_name": "{instance_id}",
                        "multi_line_start_pattern": "------------------------------------------------------------------------",
                        "timestamp_format": "%Y-%m-%d %H:%M:%S",
                        "timezone": "UTC"
                    },
                    {
                        "file_path": "/var/log/aws-cloudwatch-agent-start.log",
                        "log_group_name": "/##res_name##/##instance##/cw_agent_log",
                        "log_stream_name": "{instance_id}",
                        "multi_line_start_pattern": "------------------------------------------------------------------------",
                        "timestamp_format": "%Y-%m-%d %H:%M:%S",
                        "timezone": "UTC"
                    }
                ]
            }
        }
    },
    "metrics": {
        "append_dimensions": {
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
            "InstanceId": "${aws:InstanceId}",
            "InstanceType": "${aws:InstanceType}",
            "ImageId": "${aws:ImageId}"
        },
        "aggregation_dimensions": [
            [
                "AutoScalingGroupName"
            ]
        ],
        "metrics_collected": {
            "cpu": {
                "measurement": [
                    "cpu_usage_idle",
                    "cpu_usage_iowait",
                    "cpu_usage_user",
                    "cpu_usage_system"
                ],
                "metrics_collection_interval": 30,
                "totalcpu": true
            },
            "disk": {
                "measurement": [
                    "used_percent",
                    "inodes_free"
                ],
                "metrics_collection_interval": 60,
                "resources": [
                    "*"
                ]
            },
            "diskio": {
                "measurement": [
                "reads",
                "writes",
                "read_time",
                "write_time",
                "io_time"
                ],
                "metrics_collection_interval": 60,
                "resources": [
                    "*"
                ]
            },
            "mem": {
                "measurement": [
                    "mem_used_percent",
                    "mem_cached",
                    "mem_total"
                ],
                "metrics_collection_interval": 60
            },
            "swap": {
                "measurement": [
                "swap_used_percent"
                ],
                "metrics_collection_interval": 60
            },
            "net": {
                "resources": [
                    "eth0"
                ],
                "measurement": [
                    "bytes_sent",
                    "bytes_recv",
                    "drop_in",
                    "drop_out"
                ],
                "metrics_collection_interval": 60
            },
            "netstat": {
                "measurement": [
                    "tcp_established",
                    "tcp_syn_sent",
                    "tcp_close"
                ],
                "metrics_collection_interval": 60
            }
        }
    }
}